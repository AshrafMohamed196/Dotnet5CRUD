@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movie List";
}

<section id="speakers">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <div class="section-header">
            <h2>
                <i class="bi bi-film"></i>
                Movies
            </h2>
            <p>Movies You Have to Watch at Least Once in Your Life</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary btn mb-4">
                Add New Movie
            </a>
        </div>
        @if (!Model.Any())
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                No Movies Exist
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var Movie in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="speaker aos-init aos-animate" data-aos="fade-up" data-aos-delay="100" >
                            <img src="data:image/*;base64,@Convert.ToBase64String(Movie.Poster)" alt="@Movie.Title Poster" class="img-thumbnail h-100 w-100">
                            <div class="details">
                                <h3><a href="speaker-details.html">@Movie.Title</a></h3>
                                <p>(@Movie.Year)</p>
                                <p>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    @Movie.Rate.ToString("0.0")
                                </p>
                                <div class="social">
                                    <a class="btn btn-primary" asp-action="Details" asp-route-Id="@Movie.Id">
                                        <i class="bi bi-camera-reels"></i>
                                        Details
                                    </a>
                                    <a class="btn btn-secondary" asp-action="Edit" asp-route-Id="@Movie.Id" >
                                        <i class="bi bi-pencil-fill"></i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@Movie.Id">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        }
    </div>
</section>








