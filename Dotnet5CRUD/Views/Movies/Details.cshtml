@model Movie

@{ 
    ViewData["Title"] = Model.Title;
}

<section id="speakers-details">
    <div class="container">
        <div class="section-header">
            <h2>@Model.Title</h2>
            <p>Praesentium ut qui possimus sapiente nulla.</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <img src="data:image/*;base64,@Convert.ToBase64String(Model.Poster)" alt="@Model.Title poster" class="img-fluid img-thumbnail Movie-details">
            </div>

            <div class="col-md-6">
                <div class="details">
                    <h3>@Model.Title</h3>
                    <div class="social">
                        <div>
                            <i class="bi bi-star-fill text-warning"></i>
                            @Model.Rate.ToString("0.0")
                        </div>
                        <span class="text-muted mr-3">
                            <i class="bi bi-calendar-week"></i>
                             @Model.Year 
                        </span>
                        <span class="text-muted">
                            <i class="bi bi-film"></i>
                            @Model.Genre.Name
                        </span>
                    </div>
                    <p>@Model.StoryLine</p>
                </div>
            </div>

        </div>
    </div>

</section>