@model Dotnet5CRUD.Models.Movie

@{
    ViewData["Title"] = "Delete";
}




<div class="container">
    <div>
        <h2 class="mt-4">Are you sure you want to delete this @Model.Title Movie?</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                <i class="bi bi-calendar-week"></i>
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd class="col-sm-10">
                <i class="bi bi-star-fill text-warning"></i>
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoryLine)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoryLine)
            </dd>
            <dt class="col-sm-2">
                Poster
            </dt>
            <dd class="col-sm-10">
                <img src="data:image/*;base64,@Convert.ToBase64String(Model.Poster)" alt="@Model.Title Poster" class="img-thumbnail h-75 w-50"/>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                <i class="bi bi-film"></i>
                @Html.DisplayFor(model => model.Genre.Name)
            </dd>
        </dl>

        <form asp-action="Delete" class="mb-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>